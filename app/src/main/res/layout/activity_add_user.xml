<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.ChatSocket.AddUserActivity">

    <EditText
        android:id="@+id/userNickName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/search_layout"
        android:hint="Add Nickname"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/Font"
        android:textColorHint="@color/Font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setNickName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNickName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/theme_filled_btn"
        android:enabled="false"
        android:fontFamily="@font/sf_regualr"
        android:text="Continue..."
        android:textColor="@color/Dark"
        app:layout_constraintEnd_toEndOf="@+id/userNickName"
        app:layout_constraintStart_toStartOf="@+id/userNickName"
        app:layout_constraintTop_toBottomOf="@+id/userNickName" />

</androidx.constraintlayout.widget.ConstraintLayout>